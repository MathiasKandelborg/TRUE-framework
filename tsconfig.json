{
  "compilerOptions": {
    "pretty": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "es2015", "es2016", "es2017", "es2018"],
    "allowJs": false,
    "jsx": "preserve",
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["typescript/*"],
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@public/*": ["public/*"],
      "@pages/*": ["pages/*"],
      "@util/*": ["util/*"],
      "@styles/*": ["util/themes/styles/*"]
    },
    "typeRoots": ["typescript/**", "node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    ".git",
    ".vscode",
    "generated",
    ".next",
    "true-cms/dist",
    "true-cms"
  ],
  "include": [
    "sanity/**.js",
    ".eslintrc.js",
    "next.config.js",
    "exportSiteMap.js",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "util/**.ts"
  ]
}
